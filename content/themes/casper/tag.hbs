{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
{{>header}}

{{! The main content area on the homepage }}
<main id="main" role="main">
  <!-- INTRO -->
  <section id="intro" class="small-pad-medium off-white-bg">
    <div class="row align-center align-middle text-center">
      <div class="columns">
        <h4 class="hint"
          data-bottom-top="transform: translate(0px, 60px);"
          data-top-bottom="transform: translate(0px, -60px);"
          data-anchor-target="#intro">
          {{#if tag.description}}
              {{tag.description}}
          {{else}}
              A {{pagination.total}}-post collection
          {{/if}}
        </h4>
        <h2 class="brand-vision"
          data-bottom-top="transform: translate(0px, 45px);"
          data-top-bottom="transform: translate(0px, -45px);"
          data-anchor-target="#intro">
          <strong>{{tag.name}}</strong>
        </h2>
      </div>
    </div>
  </section>

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
