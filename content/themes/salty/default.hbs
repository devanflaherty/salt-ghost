<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>SALT | {{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <meta name="robots" content="all">
    <meta name="zipcode" content="59901">
  {{#if image}}
    <link rel="image_src" href="{{ image }}">
    <meta property="og:image" content="{{ image }}" />
    <meta name="twitter:image" content="{{ image }}" />
  {{else if @blog.cover}}
    <link rel="image_src" href="{{ @blog.cover }}">
    <meta property="og:image" content="{{ @blog.cover }}" />
    <meta name="twitter:image" content="{{ @blog.cover }}" />
  {{/if}}

    <meta property="og:url" content="http://blog.saltagency.co/{{ url }}" />
    <meta property="og:title" content="SALT | {{meta_title}}" />
    <meta property="og:description" content="{{meta_description}}" />

    <!--  twitter card tags additive with the og: tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:domain" value="http://saltagency.co" />
    <meta name="twitter:title" value="SALT | {{meta_title}}" />
    <meta name="twitter:description" value="{{meta_description}}" />
    <meta name="twitter:url" value="http://blog.saltagency.co/{{ url }}" />

    <link rel="icon" href="http://saltagency.co/images/fav/favicon.ico" type="image/x-icon" />
