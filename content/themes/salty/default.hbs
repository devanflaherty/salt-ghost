    <link rel="icon" type="image/png" href="http://saltagency.co/images/fav/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="http://saltagency.co/images/fav/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="http://saltagency.co/images/fav/favicon-128.png" sizes="128x128" />

    <!-- <link rel="shortcut icon" href="{{asset "favicon.ico"}}"> -->

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/styles.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "fonts/gotham/stylesheet.css"}}" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="https://use.typekit.net/voc1nwm.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <script src="https://use.fontawesome.com/6931815dd0.js"></script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
