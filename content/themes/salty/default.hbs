    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}} Blog">
  {{! Everything else gets inserted here }}
  {{{body}}}

  <footer id="footer">
    <section class="row align-center align-middle">
      <div class="columns branding shrink">
        <p class="vision">Make Waves</p>
        <h3>Salt</h3>
        <p class="vision">Defy Reason</p>
      </div>
    </section>
  </footer>
  {{>connect}}

  {{!-- jQuery needs to come before `{{ghost_foot}}` so that jQuery can be used in code injection --}}
  <script src="{{asset "js/jquery/dist/jquery.min.js"}}"></script>
  {{! Ghost outputs important scripts and data with this tag }}
  <script src="{{asset "js/foundation.min.js"}}" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.14.2/TweenMax.min.js"></script>
  <script src="{{asset "js/scrollmagic/uncompressed/ScrollMagic.js"}}"></script>
  <script src="{{asset "js/scrollmagic/uncompressed/plugins/animation.gsap.js"}}"></script>
  <script src="{{asset "js/scrollmagic/uncompressed/plugins/debug.addIndicators.js"}}"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.waitforimages/1.5.0/jquery.waitforimages.min.js" ></script>

  <script src="{{asset "/js/app.js"}}"></script>
  <script type="text/javascript">
    $(".BlogNav").addClass("active");
  </script>

  {{ghost_foot}}

  <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>

</body>
</html>
