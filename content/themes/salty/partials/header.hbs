<header id="header" class="flex expanded align-center contrast-text blog-header">
{{#if image}}
  <div class="parallax opaque invisible" style="background-image: url({{image}});"></div>
{{else if @blog.cover}}
  <div class="parallax opaque invisible" style="background-image: url({{@blog.cover}});"></div>
{{/if}}
  <div class="overlay"></div>

  <section class="row align-center project">
    <nav id="main-nav" class="small-6 medium-12 columns small-order-2 medium-order-1">
      <ul class="show-for-medium">
        {{navigation}}
      </ul>
      <a class="nav-toggle hide-for-medium" href="#"><span></span></a>
    </nav>

    <div id="headline" class="small-6 {{#is "home" }}medium-9{{else}}medium-10{{/is}} large-9 columns small-order-1 medium-order-2 flex">
      <div class="page-links post-logo" style="border: none!important;">
        <h1 class="logo post-logo">Salt{{#is 'home'}} <span>|</span> Blog{{/is}}</h1>
      </div>
      <div></div>
    </div>
  </section>
</header>

{{>full-nav}}
